@model WorldCup2018.Models.GetData
@{
    ViewBag.Title = "World Cup 2018 Prediction";
}

<div class="jumbotron">
    <h1>World Cup 2018 Russia</h1>
</div>
    <div>
        <label style="color:mediumvioletred" id="lblInfo">@TempData["InsertedResult"]</label>
    </div>
    <div class="text-center">
        <form action="~/Home/Index" method="post">
            <fieldset>
                @foreach (var item in Model.Teams)
                {
                    <div class="row form-group">
                        <div class="col-md-5">
                            <table>
                                <tr>
                                    <td>
                                        <img src="@item.Team1LogoUrl" />
                                        <label name="@item.Id" id="@item.Id" style="width:90px;text-align:left">@item.Team1</label>
                                    </td>
                                    <td>
                                        <input type="number" id="@item.Team1" name="@item.Id" max="20" min="0" size="4" onkeyup="if(this.value>20){this.value='20';}else if(this.value<0){this.value='0';}" value="@item.Team1Score" />
                                    </td>
                                </tr>
                            </table>



                        </div>
                        <div class="col-md-5 text-left">
                            <table>
                                <tr>
                                    <td>
                                        <img src="@item.Team2LogoUrl" />
                                        <label style="width:90px;text-align:left">@item.Team2</label>
                                    </td>
                                    <td>
                                        <input type="number" id="@item.Team2" name="@item.Id" max="20" min="0" onKeyUp="if(this.value>20){this.value='20';}else if(this.value<0){this.value='0';}" size="4" value="@item.Team2Score" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                }
            </fieldset>
            <button type="submit" class="btn btn-primary" style="text-align:center">Submit</button>
        </form>
    </div>


